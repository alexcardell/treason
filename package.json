{
  "name": "treason",
  "version": "0.1.0",
  "description": "ReasonML tmux library",
  "keywords": [ "reason", "esy" ],
  "esy": { "build": "refmterr dune build -p #{self.name}" },
  "buildDirs": {
    "test": {
      "require": [ "treason.lib", "rely.lib" ],
      "preprocess": [ "pps", "lwt_ppx" ],
      "main": "TestTreason",
      "name": "TestTreason.exe",
      "ocamloptFlags": [ "-linkall", "-g" ]
    },
    "lib": {
      "require": [ "pastel.lib", "console.lib", "lwt", "lwt.unix" ],
      "preprocess": [ "pps", "lwt_ppx" ],
      "name": "treason.lib",
      "namespace": "Treason"
    },
    "exe": {
      "require": [
        "pastel.lib", "console.lib", "treason.lib", "lwt", "lwt.unix"
      ],
      "preprocess": [ "pps", "lwt_ppx" ],
      "name": "treason.exe",
      "main": "TreasonApp"
    }
  },
  "scripts": { "test": "esy x TestTreason.exe", "run": "esy x Treason.exe" },
  "dependencies": {
    "@esy-ocaml/reason": ">= 3.4.0 < 3.5.0",
    "@opam/dune": "*",
    "@opam/lwt": "4.2.1",
    "@opam/lwt_ppx": "1.2.2",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "@reason-native/rely": "*",
    "ocaml": "~4.6.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "lint-staged": "^8.1.7",
    "pesy": "^0.4.1",
    "reason-cli": "^0.0.0",
    "refmterr": "*"
  },
  "repository": "git@github.com:baubler/treason.git",
  "author": "baubler <29524087+baubler@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "lint-staged": { "*.re": [ "refmt --in-place", "git add" ] }
}
